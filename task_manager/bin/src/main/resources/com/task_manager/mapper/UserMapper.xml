<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.task_manager.mapper.UserMapper">
    <!--  全件検索 -->
    <select id="findAllUsers"
        resultType="com.task_manager.entity.User">
        SELECT *
        FROM users    
    </select>
    
    <!--アクティブ状態を指定してユーザーを全件検索 -->
    <select id="findByDelFlgUsers"
        resultType="com.task_manager.entity.User">
        SELECT * 
        FROM users
        WHERE del_flg = #{delFlg}
    </select>
    
    <!--IDを指定してユーザーを取得 -->
    <select id="findByUserId"
        resultType="com.task_manager.entity.User">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>
    
    <!--ログインidとパスワードを指定して取得 -->
    <select id="findByLoginIdAndPassword"
        resultType="com.task_manager.entity.User">
        SELECT *
        FROM users
        WHERE login_id = #{loginId} AND password = #{password}    
    </select>
 
</mapper>
